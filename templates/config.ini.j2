[ndbd default]
# Options affecting ndbd processes on all data nodes:
NoOfReplicas=1    # Number of replicas
DataMemory={{ config_data_mem }}    # How much memory to allocate for data storage
#IndexMemory=128M   # How much memory to allocate for index storage

# For DataMemory and IndexMemory, we have used the
# default values. Since the "world" database takes up
# only about 500KB, this should be more than enough for
# this example Cluster setup.

{% for host in groups["mysql_cluster_mgm"] %}
{% if hostvars[host]["mysql_cluster"] == mysql_cluster %}
[ndb_mgmd]
hostname={{ host }}
datadir={{ ndb_mgmd_data_dir }}
{% endif %}
{% endfor %}

{% for host in groups["mysql_cluster_data"] %}
{% if hostvars[host]["mysql_cluster"] == mysql_cluster %}
[ndbd]
HostName={{ host }}
datadir={{ config_data_dir }}
{% endif %}
{% endfor %}

{% for host in groups["mysql_cluster_sql"] %}
{% if hostvars[host]["mysql_cluster"] == mysql_cluster %}
[mysqld]
HostName={{ host }}
{% endif %}
{% endfor %}
